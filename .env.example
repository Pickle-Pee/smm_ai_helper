# Backend & DB
DATABASE_URL=postgresql+asyncpg://smm_user:smm_pass@db:5432/smm_swarm

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Models
DEFAULT_TEXT_MODEL_LIGHT=gpt-4o-mini
DEFAULT_TEXT_MODEL_HARD=gpt-5-mini
DEFAULT_IMAGE_MODEL=gpt-image-1

# Images
IMAGE_STORAGE_PATH=/data/images
IMAGE_MAX_ITERS=2

# HTTP settings
HTTP_TIMEOUT=60
HTTP_RETRIES=2
HTTP_BACKOFF=0.5

# Telegram bot
TELEGRAM_BOT_TOKEN=your_telegram_token_here

# URL backend для бота (внутри docker-compose это http://backend:8000)
API_BASE_URL=http://backend:8000
